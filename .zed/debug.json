// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "adapter": "CodeLLDB",
    "label": "Run GUI on Cargo.lock",
    "program": "$ZED_WORKTREE_ROOT/target/debug/logviewer",
    "build": {
      "label": "cargo run -p logviewer",
      "command": "cargo",
      "args": ["build", "--features", "gui"],
      "cwd": "$ZED_WORKTREE_ROOT",
    },
    "args": ["--gui", "Cargo.lock"],
    "request": "launch",
    "sourceLanguages": ["rust"],
  },
]
